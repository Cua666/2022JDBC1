<image src="/images/ai.jpg" mode="scaleToFill" class="backgroundimg"></image>

<view>
  <modal  wx:if="{{currDiceNum1>=9||currDiceNum2>=9}}" hidden="{{!modalofScoreHidden}}"  bindconfirm="ScoreConfirm" bindcancel="ScoreCandel"  >
    <button bindtap="getScore" >
      <view class="getscorefont" wx:if="{{!showscore}}">
        <view>---结束!!!!---</view>
        <view class="end">请点击此处以获取最终得分</view>
      </view>
    </button>
    <view>
    <image wx:if="{{showscore}}" src="/images/champ.png" class="champ"></image>
    <text class="final">
      <text wx:if="{{showscore}}">{{score1>score2?"AI":"你"}}获胜!!\n</text>
      <text wx:if="{{showscore}}">\r最终比分\n\rAI={{score1}}:你={{score2}}</text>
    </text>
  </view>
  </modal>
</view>

<text class="Msg">
  <text class="P">Bot</text>
